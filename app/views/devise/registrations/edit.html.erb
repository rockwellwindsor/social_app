<div class="login row">
      <h2>Edit <%= current_user.first_name %>'s profile.</h2>
      <%= form_for(resource, as: resource_name, class: "form row", url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= render 'layouts/alerts' %>

      <div class="row col-xs-12">
        <div class="field group col-xs-6">
          <%= f.text_field :first_name, class: "input" %>
          <span class="highlight"></span>
          <span class="bar"></span>
          <%= f.label :first_name, class: "loglabel" %><br />
        </div>
        
        <div class="field group col-xs-6">
          <%= f.text_field :last_name, class: "input" %>
          <span class="highlight"></span>
          <span class="bar"></span>
          <%= f.label :last_name, class: "loglabel" %><br />
        </div>
      </div>
      <div class="field group col-xs-6">
        <%= f.text_field :department, class: "input" %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= f.label :department, class: "loglabel" %><br />
      </div>
     
      <div class="field group">
        <%= f.label :biography %><br />
        <%= f.text_area :biography %>
      </div>

      <div class="field group">
        <%= f.label :hobbies %><br />
        <%= f.text_area :hobbies %>
      </div>

      <div class="field group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field group">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>





  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Profile", root_path %>
</div>
