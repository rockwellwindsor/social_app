<p id="notice"><%= notice %></p>

<h1>Space Subscriptions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Spaces</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @space_subscriptions.each do |space_subscription| %>
      <tr>
        <td><%= space_subscription.user %></td>
        <td><%= space_subscription.spaces %></td>
        <td><%= space_subscription.status %></td>
        <td><%= link_to 'Show', space_subscription %></td>
        <td><%= link_to 'Edit', edit_space_subscription_path(space_subscription) %></td>
        <td><%= link_to 'Destroy', space_subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Space Subscription', new_space_subscription_path %>
