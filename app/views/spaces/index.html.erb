<p id="notice"><%= notice %></p>

<h1>Spaces</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Space type</th>
      <th>Icon</th>
      <th>Ispublic</th>
      <th>Isprivate</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.user %></td>
        <td><%= space.title %></td>
        <td><%= space.description %></td>
        <td><%= space.space_type %></td>
        <td><%= space.icon %></td>
        <td><%= space.isPublic %></td>
        <td><%= space.isPrivate %></td>
        <td><%= space.active %></td>
        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

